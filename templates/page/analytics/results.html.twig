{% extends 'layout/left-side-column.html.twig' %}

{% block page %}
	{% embed "_page.html.twig" %}
		{% block page_title %}
			{{ 'Results'|trans }}
		{% endblock %}

		{% block page_content %}
            <div class="btn-group" id="analytics-submenu">
                <a class="btn btn-secondary" href="#analytics-projects">{{ 'Projects'|trans }}</a>
                <a class="btn btn-secondary" href="#analytics-tasks">{{ 'Tasks'|trans }}</a>
                <a class="btn btn-secondary" href="#analytics-users">{{ 'Users'|trans }}</a>
                <a class="btn btn-secondary" href="#all-records">{{ 'All records'|trans }}</a>
            </div>

            <div class="row" id="analytics-projects">
                <div class="col-md-12">
                    <h2 class="analytics-section">{{ 'Projects Analytics'|trans }}</h2>
                </div>
            </div>

            <div class="row" id="projects" data-projects="{{ projects|json_encode }}">
                <div class="col-6">
                    <h2>{{ 'Total per Tasks in each Project'|trans }}</h2>
                    {% for project in projects %}
                        <div class="tile">
                            <h3>{{ project.name }}</h3>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for task in project.tasks %}
                                    <tr>
                                        <th>{{ task.name }}</th>
                                        {% set total = task.total + total %}
                                        <td>{{ task.total }}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="table-success">
                                        <td>Total</td>
                                        <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="project-task-{{ project.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-6">
                    <h2>{{ 'Total per Users in each Project'|trans }}</h2>
                    {% for project in projects %}
                        <div class="tile">
                            <h4>{{ project.name }}</h4>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for user in project.users %}
                                    <tr>
                                        {% set total = user.total + total %}
                                        <th>{{ user.username }}</th>
                                        <td>{{ user.total }}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="table-success">
                                    <td>Total</td>
                                    <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="project-user-{{ project.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="row" id="analytics-tasks">
                <div class="col-md-12">
                    <h2 class="analytics-section">{{ 'Tasks Analytics'|trans }}</h2>
                </div>
            </div>

            <div class="row" id="tasks" data-tasks="{{ tasks|json_encode }}">
                <div class="col-6">
                    <h2>{{ 'Total per Projects in each Task'|trans }}</h2>
                    {% for task in tasks %}
                        <div class="tile">
                            <h4>{{ task.name }}</h4>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for project in task.projects %}
                                    <tr>
                                        {% set total = project.total + total %}
                                        <td>{{ project.name }}</td>
                                        <td>{{ project.total }}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="table-success">
                                        <td>Total</td>
                                        <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="task-project-{{ task.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-6">
                    <h2>{{ 'Total per Users in each Task'|trans }}</h2>
                    {% for task in tasks %}
                        <div class="tile">
                            <h4>{{ task.name }}</h4>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for user in task.users %}
                                        <tr>
                                        <th>{{ user.username }}</th>
                                        {% set total = user.total + total %}
                                        <td>{{ user.total }}</td>
                                    {% endfor %}
                                    <tr class="table-success">
                                        <td>Total</td>
                                        <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="task-user-{{ task.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="row" id="analytics-users">
                <div class="col-md-12">
                    <h2 class="analytics-section">{{ 'Users Analytics'|trans }}</h2>
                </div>
            </div>
            
            <div class="row" id="users" data-users="{{ users|json_encode }}">
                <div class="col-6">
                    <h2>{{ 'Total per Projects for each User'|trans }}</h2>
                    {% for user in users %}
                        <div class="tile">
                            <h4>{{ user.username }}</h4>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for project in user.projects %}
                                    <tr>
                                        <td>{{ project.name }}</td>
                                        {% set total = project.total + total %}
                                        <td>{{ project.total }}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="table-success">
                                        <td>Total</td>
                                        <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="user-project-{{ user.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-6">
                    <h2>{{ 'Total per Tasks for each User'|trans }}</h2>
                    <h3>{{ 'tasks'|trans }}</h3>
                    {% for user in users %}
                        <div class="tile">
                            <h4>{{ user.username }}</h4>
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    {% set total = 0 %}
                                    {% for task in user.tasks %}
                                    <tr>
                                        <th>{{ task.name }}</th>
                                        {% set total = task.total + total %}
                                        <td>{{ task.total }}</td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="table-success">
                                        <td>Total</td>
                                        <td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="chart">
                                <canvas id="user-task-{{ user.id }}"></canvas>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="row" id="analytics-all-records">
                <div class="col-md-12">
                    <h2 class="analytics-section">{{ 'All records'|trans }}</h2>
                </div>
            </div>

            <div class="row" id="all-records">
                <div class="col-md-12">
                    <div class="tile">
                        <table class="table table-hover table-striped table-bordered" class="table table-bordered table-striped table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'analytics.project'|trans }}</th>
                                <th>{{ 'analytics.task'|trans }}</th>
                                <th>{{ 'analytics.user'|trans }}</th>
                                <th>{{ 'analytics.start_time'|trans }}</th>
                                <th>{{ 'analytics.end_time'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for time in times %}
                                {% set difference = date(time.endTime).diff(date(time.startTime)) %}
                                <tr>
                                    <td>{{ time.project.name }}</td>
                                    <td>{{ time.task.name }}</td>
                                    <td>{{ time.user.username }}</td>
                                    <td>{{ time.startTime|date('Y-m-d H:i') }}</td>
                                    <td>{{ time.endTime|date('Y-m-d H:i') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block footer %}
    {{ parent() }}
	{% block javascripts_footer %}
		{{ encore_entry_script_tags('analytics-results') }}
	{% endblock %}
{% endblock %}
